{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Rome)"
  ],
  "automerge": false,
  "platformAutomerge": false,
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "groupName": null,
  "assignees": [
    "ildoc"
  ],
  "prConcurrentLimit": 50,
  "prHourlyLimit": 0,
  "prCreation": "not-pending",
  "internalChecksFilter": "flexible",
  "ignorePaths": [
    "**/archived/**",
    "docs/**"
  ],
  "docker-compose": {
    "fileMatch": [
      "(^|/)docker-compose[^/]*\\.ya?ml$",
      "(^|/)docker-compose[^/]*\\.ya?ml\\.j2$",
      "(^|/)compose[^/]*\\.ya?ml$",
      "(^|/)compose[^/]*\\.ya?ml\\.j2$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "kubernetes/.+\\.ya?ml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Aggiorna immagini Docker in template Jinja2/Ansible con variabili",
      "fileMatch": [
        "(^|/)docker-compose[^/]*\\.ya?ml\\.j2$",
        "(^|/)compose[^/]*\\.ya?ml\\.j2$"
      ],
      "matchStrings": [
        "image:\\s+[\"']?(?<depName>[^:\"'\\s{]+):(?<currentValue>[^\"'\\s@{]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?[\"']?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "description": "Immagini quay.io con digest pinning",
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePatterns": [
        "^quay\\.io/"
      ],
      "pinDigests": true,
      "groupName": "quay.io images"
    },
    {
      "description": "Invidious - usa versioning loose per tag inconsistenti",
      "matchPackageNames": [
        "quay.io/invidious/invidious"
      ],
      "versioning": "loose",
      "followTag": "master"
    },
    {
      "description": "Invidious Companion - usa versioning loose per tag inconsistenti",
      "matchPackageNames": [
        "quay.io/invidious/invidious-companion"
      ],
      "versioning": "loose",
      "followTag": "latest"
    },
    {
      "description": "Disabilita automerge per tutto",
      "matchPackagePatterns": [
        "*"
      ],
      "automerge": false,
      "platformAutomerge": false,
      "groupName": null
    },
    {
      "description": "Security updates - senza stability days",
      "matchUpdateTypes": [
        "patch"
      ],
      "minimumReleaseAge": null,
      "prCreation": "immediate"
    },
    {
      "description": "Major updates - pi√π giorni di stability",
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Minor updates - periodo standard",
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "3 days"
    }
  ],
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ]
}
