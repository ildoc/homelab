{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Rome)"
  ],
  
  "automerge": false,
  "platformAutomerge": false,
  
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "groupName": null,
  
  "assignees": ["ildoc"],
  
  "prConcurrentLimit": 50,
  "prHourlyLimit": 0,
  
  "ignorePaths": [
    "**/kubernetes/applications/archived/**"
  ],
  
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/.+\\.ya?ml$/"
    ]
  },
  
  "ansible": {
    "managerFilePatterns": [
      "/ansible/.+\\.ya?ml$/",
      "/ansible/.+\\.ya?ml\\.j2$/"
    ]
  },
  
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Kubernetes files",
      "managerFilePatterns": [
        "/^kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  
  "packageRules": [
    {
      "description": "Disabilita automerge per tutto",
      "matchPackageNames": ["*"],
      "automerge": false,
      "platformAutomerge": false,
      "groupName": null
    },
    {
      "description": "Dipendenze critiche con priorit√† alta",
      "matchPackageNames": [
        "critical-package-1",
        "critical-package-2"
      ],
      "prPriority": 5,
      "groupName": null
    }
  ],
  
  "minimumReleaseAge": "3 days",
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ]
}
