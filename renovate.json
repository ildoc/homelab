{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "assignees": [
    "ildoc"
  ],
  "ignorePaths": [
    "**/kubernetes/applications/archived/**"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/.+\\.ya?ml$/"
    ]
  },
  "ansible": {
    "managerFilePatterns": [
      "/ansible/.+\\.ya?ml$/",
      "/ansible/.+\\.ya?ml\\.j2$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Kubernetes files",
      "managerFilePatterns": [
        "/^kubernetes/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Disable automerge",
      "automerge": false,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Gruppo per aggiornamenti security",
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "Security patches",
      "prPriority": 10,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Dipendenze critiche con priorit√† alta",
      "matchPackageNames": [
        "critical-package-1",
        "critical-package-2"
      ],
      "prPriority": 5
    }
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "minimumReleaseAge": "3 days",
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ]
}
