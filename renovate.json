{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "ildoc"
  ],
  "ignorePaths": [
    "**/kubernetes/applications/archived/**"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)kubernetes/.+\\.ya?ml$/"
    ]
  },
  "ansible": {
    "managerFilePatterns": [
      "/(^|/)ansible/.+\\.ya?ml$/",
      "/(^|/)ansible/.+\\.ya?ml\\.j2$/"
    ]
  }
}
