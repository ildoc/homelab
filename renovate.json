{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Rome)"
  ],
  
  "automerge": false,
  "platformAutomerge": false,
  
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "groupName": null,
  
  "assignees": ["ildoc"],
  
  "prConcurrentLimit": 50,
  "prHourlyLimit": 0,
  
  "prCreation": "not-pending",
  "internalChecksFilter": "flexible",
  
  "ignorePaths": [
    "**/kubernetes/applications/archived/**",
    "**/opentofu/archived/**"
  ],

  "docker-compose": {
    "fileMatch": [
      "(^|/)docker-compose[^/]*\\.ya?ml$",
      "(^|/)compose[^/]*\\.ya?ml$"
    ]
  },
  
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/.+\\.ya?ml$/"
    ]
  },
  
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Ansible docker-compose templates",
      "fileMatch": [
        "ansible/.+/templates/docker-compose\\.ya?ml\\.j2$",
        "ansible/.+/files/docker-compose\\.ya?ml$"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:\\s'\"]+):(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Docker images in Kubernetes files",
      "fileMatch": [
        "kubernetes/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "image:\\s+(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  
  "packageRules": [
    {
      "description": "Disabilita automerge per tutto",
      "matchPackageNames": ["*"],
      "automerge": false,
      "platformAutomerge": false,
      "groupName": null
    },
    {
      "description": "Security updates - senza stability days",
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": null,
      "prCreation": "immediate"
    },
    {
      "description": "Major updates - pi√π giorni di stability",
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Minor updates - periodo standard",
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "3 days"
    }
  ],
  
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ]
}
