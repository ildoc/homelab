---
# Traefik static configuration
# Allow encoded characters in URL paths (needed for GitLab API with %2F in project names)
core:
  defaultRuleSyntax: v3

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  
  websecure:
    address: ":443"
    http:
      encodedCharacters:
        allowEncodedSlash: true  # Allow %2F in URL paths (needed for GitLab API)
      tls:
        certResolver: cloudflare
        domains:
          - main: "{{ gitlab.domain }}"
            sans:
              - "*.{{ gitlab.domain }}"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: traefik

certificatesResolvers:
  cloudflare:
    acme:
      email: "{{ gitlab.letsencrypt_email }}"
      storage: /letsencrypt/acme.json
      dnsChallenge:
        provider: cloudflare
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"

log:
  level: INFO

accessLog: {}
