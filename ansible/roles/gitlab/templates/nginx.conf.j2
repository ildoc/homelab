events {
    worker_connections 1024;
}

http {
    # Configurazioni globali
    client_max_body_size 0;  # Nessun limite globale
    proxy_request_buffering off;  # Disabilita buffering per upload grandi
    
    # Timeouts più generosi
    proxy_connect_timeout 300;
    proxy_send_timeout 300;
    proxy_read_timeout 300;
    send_timeout 300;

    # Headers comuni per tutti i server
    map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
    }

    # Server principale GitLab
    server {
        listen 443 ssl http2;
        server_name {{ gitlab.domain }};

        ssl_certificate     /etc/letsencrypt/live/{{ gitlab.domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ gitlab.domain }}/privkey.pem;
        
        # Configurazioni SSL moderne
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_prefer_server_ciphers on;
        ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
        
        # Nessun limite per GitLab (gestisce internamente)
        client_max_body_size 0;

        # Location principale
        location / {
            proxy_pass http://gitlab:80;
            
            # Headers standard
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Ssl on;
            
            # Headers per WebSocket
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            
            # Headers aggiuntivi per GitLab
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            # Buffering disabilitato per streaming
            proxy_buffering off;
            proxy_request_buffering off;
            
            # Timeouts
            proxy_connect_timeout 300;
            proxy_send_timeout 300;
            proxy_read_timeout 300;
        }

        # Location specifica per il terminal WebSocket
        location ~ ^/[\w\.-]+/[\w\.-]+/-/(environments|jobs)/\d+/terminal.ws$ {
            proxy_pass http://gitlab:80;
            
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            proxy_read_timeout 3600s;
            proxy_send_timeout 3600s;
        }

        # Location per cable (ActionCable WebSocket)
        location /cable {
            proxy_pass http://gitlab:80;
            
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            proxy_read_timeout 3600s;
        }
    }

    # Server Registry GitLab
    server {
        listen 443 ssl http2;
        server_name registry.{{ gitlab.domain }};

        ssl_certificate     /etc/letsencrypt/live/{{ gitlab.domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ gitlab.domain }}/privkey.pem;
        
        # Configurazioni SSL moderne
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_prefer_server_ciphers on;
        ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;

        # Limite generoso per immagini Docker grandi
        client_max_body_size 0;
        
        # Chunked transfer encoding
        chunked_transfer_encoding on;

        location / {
            proxy_pass http://gitlab:5000;
            
            # Headers standard
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Headers specifici per Docker Registry
            proxy_set_header X-Forwarded-Ssl on;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            # Disabilita buffering per upload grandi
            proxy_buffering off;
            proxy_request_buffering off;
            
            # Timeouts generosi per push/pull di immagini grandi
            proxy_connect_timeout 900;
            proxy_send_timeout 900;
            proxy_read_timeout 900;
            
            # Headers HTTP/1.1 per keep-alive
            proxy_http_version 1.1;
            proxy_set_header Connection "";
        }

        # Health check endpoint
        location /v2/ {
            proxy_pass http://gitlab:5000;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Timeouts più brevi per health checks
            proxy_connect_timeout 30;
            proxy_send_timeout 30;
            proxy_read_timeout 30;
        }
    }
}
